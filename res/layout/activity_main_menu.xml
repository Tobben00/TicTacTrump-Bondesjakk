<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006699"
    tools:context="no.woact.martob16.MainMenu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/toolbar_MainMenu">

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/textview_Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:text="Welcome Player1, Trump will never fail!"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.032" />

        <Button
            android:id="@+id/button_play"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_below="@+id/textview_Welcome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="onClickPvAI"
            android:text="Play against bot trump"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="52dp" />

        <Button
            android:id="@+id/button_pvp"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_alignLeft="@+id/button_play"
            android:layout_alignStart="@+id/button_play"
            android:layout_below="@+id/button_play"
            android:onClick="onClickPVP"
            android:text="Player VS Player" />

        <Button
            android:id="@+id/button_stats"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_alignLeft="@+id/button_pvp"
            android:layout_alignStart="@+id/button_pvp"
            android:layout_below="@+id/button_pvp"
            android:text="Stats"
            android:onClick="onClickStats"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="107dp" />

        <Button
            android:id="@+id/button_about"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_alignLeft="@+id/button_stats"
            android:layout_alignStart="@+id/button_stats"
            android:layout_below="@+id/button_stats"
            android:text="About"
            android:onClick="onClickAbout"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="107dp" />

        <Button
            android:id="@+id/button_resetDatabase"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_above="@+id/button_setName"
            android:layout_centerHorizontal="true"
            android:onClick="onClickResetDatabase"
            android:text="Reset Local Stats Database"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="107dp" />

        <Button
            android:id="@+id/button_setName"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="Set your name!"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="107dp"/>

    </RelativeLayout>

</LinearLayout>
